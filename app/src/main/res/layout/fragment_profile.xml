<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:id="@+id/profile_relative"
            android:clickable="true"
            app:defaultNavHost="true"
            android:focusable="true"
            android:onClick="@{() -> profileFragment.ProfileToSettingsClick()}"
            >

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/cardview_user_photo"
                android:text="Иван"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/profile_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_alignParentRight="true"
                android:paddingEnd="12dp"
                android:layout_centerVertical="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/black"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:src="@drawable/ic_baseline_face_24" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/profile_notifications_button"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_notifications_24"
                    android:text="Уведомления" />

                <Button
                    android:id="@+id/profile_interviews_button"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_cases_24"
                    android:text="Мои собеседовния" />

                <Button
                    android:id="@+id/profile_my_jobs_button"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_cases_24"
                    android:text="Мои профессии" />

                <Button
                    android:id="@+id/profile_location_button"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_navigation_24"
                    android:text="Моя локация" />

                <RelativeLayout
                    android:id="@+id/profile_mail_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/imageView"
                        style="@style/Button_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_mail_24" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/imageView"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Почта"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:textColor="#ACACAC" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="0dp"
                        android:layout_toStartOf="@+id/imageView2"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingEnd="4dp"
                        android:text="gmail@gmail.com"
                        android:textColor="#72ACACAC" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:paddingEnd="16dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

                </RelativeLayout>

                <Button
                    android:id="@+id/profile_help_button"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_help_outline_24"
                    android:text="Помощь" />

                <Button
                    android:id="@+id/profile_notifications6"
                    style="@style/Button_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:text="О приложении" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>